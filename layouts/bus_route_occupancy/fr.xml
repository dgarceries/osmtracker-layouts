<layouts>
    <layout name="root" iconpos="right">
        <row>
            <button type="systrapage" label="Arrêt formel" targetlayout="infoarret" icon="/bus_route_occupancy_icons/formal_bus_stop_v2.png"/>
        </row>
        <row>
            <button type="systrapage" label="Arrêt informel" targetlayout="infoarretinformel" icon="/bus_route_occupancy_icons/informal_bus_stop_v2.png"/>
        </row>
        <row>
            <button type="systracounter" systratype="number_passengers" label="Nombre de passagers" icon="/bus_route_occupancy_icons/onboard.png" background_color="#1f4e79" is_to_validate="true"/>
        </row>
    </layout>
    <layout name="infoarret" iconpos="left">
        <row>
            <button type="systracounter" systratype="boardings_men" label="Montées hommes" icon="/bus_route_occupancy_icons/boardings_men.png" background_color="#385723"/>
        </row>
        <row>
            <button type="systracounter" systratype="boardings_women" label="Montées femmes" icon="/bus_route_occupancy_icons/boardings_women.png" background_color="#385723"/>
        </row>
        <row>
            <button type="systracounter" systratype="alightings" label="Descentes" icon="/bus_route_occupancy_icons/alightings.png" background_color="#960c0c"/>
        </row>
        <row>
            <button type="systranote" systratype="name" label="Nom de l'arrêt"/>
        </row>
        <row>
            <button type="systravalidate" systratype="stop_type=0" label="Valider" background_color="#385723"/>
        </row>
    </layout>
    <layout name="infoarretinformel" iconpos="left">
        <row>
            <button type="systracounter" systratype="boardings_men" label="Montées hommes" icon="/bus_route_occupancy_icons/boardings_men.png" background_color="#385723"/>
        </row>
        <row>
            <button type="systracounter" systratype="boardings_women" label="Montées femmes" icon="/bus_route_occupancy_icons/boardings_women.png" background_color="#385723"/>
        </row>
        <row>
            <button type="systracounter" systratype="alightings" label="Descentes" icon="/bus_route_occupancy_icons/alightings.png" background_color="#960c0c"/>
        </row>
        <row>
            <button type="systranote" systratype="name" label="Nom de l'arrêt"/>
        </row>
        <row>
            <button type="systravalidate" systratype="stop_type=1" label="Valider" background_color="#385723"/>
        </row>
    </layout>
</layouts>
