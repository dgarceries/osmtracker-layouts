<layouts>
    <layout name="root" iconpos="right">
        <row>
            <button type="page" label="Formal stop" targetlayout="infoarret" icon="/bus_route_occupancy_icons/formal_bus_stop_v2.png"/>
        </row>
        <row>
            <button type="page" label="Informal stop" targetlayout="infoarretinformel" icon="/bus_route_occupancy_icons/informal_bus_stop_v2.png"/>
        </row>
        <row>
            <button type="systracounter" systratype="number_passengers" label="Onboard" icon="/bus_route_occupancy_icons/onboard.png" background_color="#1f4e79" is_to_validate="true"/>
        </row>
    </layout>
    <layout name="infoarret" iconpos="left">
        <row>
            <button type="systracounter" systratype="boardings_men" label="Boardings men" icon="/bus_route_occupancy_icons/boardings_men.png" background_color="#385723"/>
        </row>
        <row>
            <button type="systracounter" systratype="boardings_women" label="Boardings women" icon="/bus_route_occupancy_icons/boardings_women.png" background_color="#385723"/>
        </row>
        <row>
            <button type="systracounter" systratype="alightings" label="Alightings" icon="/bus_route_occupancy_icons/alightings.png" background_color="#960c0c"/>
        </row>
        <row>
            <button type="systranote" systratype="name" label="Stop name"/>
        </row>
        <row>
            <button type="systravalidate" systratype="stop_type=0" label="Confirm" background_color="#385723"/>
        </row>
    </layout>
    <layout name="infoarretinformel" iconpos="left">
        <row>
            <button type="systracounter" systratype="boardings_men" label="Boardings men" icon="/bus_route_occupancy_icons/boardings_men.png" background_color="#385723"/>
        </row>
        <row>
            <button type="systracounter" systratype="boardings_women" label="Boardings women" icon="/bus_route_occupancy_icons/boardings_women.png" background_color="#385723"/>
        </row>
        <row>
            <button type="systracounter" systratype="alightings" label="Alightings" icon="/bus_route_occupancy_icons/alightings.png" background_color="#960c0c"/>
        </row>
        <row>
            <button type="systranote" systratype="name" label="Stop name"/>
        </row>
        <row>
            <button type="systravalidate" systratype="stop_type=1" label="Confirm" background_color="#385723"/>
        </row>
    </layout>
</layouts>
