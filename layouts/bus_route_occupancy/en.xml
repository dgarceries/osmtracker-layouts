<layouts>
    <layout name="root">
        <row>
            <button type="systrapage" label="Formal stop" targetlayout="infoarret"/>
            <button type="systrapage" label="Informal stop" targetlayout="infoarretinformel"/>
        </row>
        <row>
            <button type="systranote" systratypenote="number_passengers" label="Number of passengers" icon="/bus_route_occupancy_icons/passenger.png"/>
        </row>
    </layout>
    <layout name="infoarret">
        <row>
            <button type="systranote" systratypenote="boardings_men" label="Boardings M" icon="/bus_route_occupancy_icons/man_icon.png"/>
            <button type="systranote" systratypenote="boardings_women" label="Boardings F" icon="/bus_route_occupancy_icons/woman_icon.png"/>
        </row>
        <row>
            <button type="systranote" systratypenote="alightings" label="Alightings" icon="/bus_route_occupancy_icons/descente.png"/>
        </row>
        <row>
            <button type="systranote" systratypenote="name" label="Stop name"/>
        </row>
        <row>
            <button type="voicerec" label="Voice note"/>
        </row>
    </layout>
    <layout name="infoarretinformel">
        <row>
            <button type="systranote" systratypenote="boardings_men" label="Boardings M" icon="/bus_route_occupancy_icons/man_icon.png"/>
            <button type="systranote" systratypenote="boardings_women" label="Boardings F" icon="/bus_route_occupancy_icons/woman_icon.png"/>
        </row>
        <row>
            <button type="systranote" systratypenote="alightings" label="Alightings" icon="/bus_route_occupancy_icons/descente.png"/>
        </row>
        <row>
            <button type="systranote" systratypenote="name" label="Stop name"/>
        </row>
        <row>
            <button type="voicerec" label="Voice note"/>
        </row>
    </layout>
</layouts>
